{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "strictPropertyInitialization": false,
    "outDir": "dist/",
  },
  "include": [
    "**/*.ts",
    "../../drizzle/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}